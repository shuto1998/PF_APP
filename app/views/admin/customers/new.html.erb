<h4>社員登録</h4>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のエラーが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @customer, url: admin_customers_path, local: true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :名前 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name_kana %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
       <%= f.label :住所 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
     <%= f.label :電話番号 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :telephone_number %>
    </div>
    <div class="col-lg-2"></div>
  </div>

   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-4">
    <%= f.text_field :email %>
    </div>
    <div class="col-lg-2"></div>
  </div>
   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :password %>
    </div>
    <div class="col-lg-4">
    <%=f.password_field :password %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.submit %>
    </div>
    <div class="col-lg-4">
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
  <% end %>