<h2>社員一覧</h2>

<table>
  <tr>
    <th>ID</th>
    <th>名前</th>
    <th>電話番号</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @customers.each do |customer| %>
  <tr>
    <td><%= customer.id %></td>
    <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
    <td><%= customer.telephone_number %></td>
    <td><%= customer.email %></td>
    <td>
        <% if customer.is_deleted %>
        退職済
        <% else %>
        在職中
        <% end %>
    </td>
  <% end %>
  </tr>

</table>

<%= link_to "社員登録",new_admin_customer_path %>