<h5>社員一覧</h5>
<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
      <%= link_to new_admin_customer_path,class: 'btn btn-primary' ,method: :get do %>
      <i class="fas fa-user-plus"></i>
      <% end %>
    </div>
  </div>

  <table class="table table-striped table-bordered">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>電話番号</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
      <td><%= customer.telephone_number %></td>
      <td><%= customer.email %></td>
      <td>
          <% if customer.is_deleted %>
          退職済
          <% else %>
          在職中
          <% end %>
      </td>
    <% end %>
    </tr>
  
  </table>

  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4"><%= paginate(@customers) %></div>
    <div class="col-lg-4"></div>
  </div>
</div>