<h4><%= @customer.name %>さんの編集画面</h4>
<%= form_with model: @customer,url: admin_customer_path do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :名前 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name_kana %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
       <%= f.label :住所 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
     <%= f.label :電話番号 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :telephone_number %>
    </div>
    <div class="col-lg-2"></div>
  </div>

   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :メールアドレス %>
    </div>
    <div class="col-lg-4">
    <%= f.text_field :email %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">会員ステータス</div>
    <div class="col-lg-1"><%= f.radio_button :is_deleted, false %>在籍中</div>
    <div class="col-lg-1"><%= f.radio_button :is_deleted, true  %>退職済</div>
    <div class="col-lg-4"></div>
  </div>
   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :password %>
    </div>
    <div class="col-lg-4">
    <%=f.password_field :password %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.submit'編集完了', class: 'btn btn-primary' %>
    </div>
    <div class="col-lg-4"><%= link_to "退会する", admin_unsubscribe_path(id: @customer.id), class: 'btn btn-danger' %></div>
    <div class="col-lg-2"></div>
  </div>

</div>
<% end %>