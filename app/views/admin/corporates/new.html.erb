<h4>企業登録</h4>
<% if @corporate.errors.any? %>
  <%= @corporate.errors.count %>件のエラーが発生しました
  <ul>
    <% @corporate.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @corporate,url: admin_corporates_path, local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :企業名 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :name_kana %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
       <%= f.label :"年商(百万)" %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :annual_saleses %>
    </div>
    <div class="col-lg-2"></div>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
     <%= f.label :住所 %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :address %>
    </div>
    <div class="col-lg-2"></div>
  </div>

   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :電話番号 %>
    </div>
    <div class="col-lg-4">
    <%= f.text_field :phone_number,:placeholder => "ハイフンなし" %>
    </div>
    <div class="col-lg-2"></div>
  </div>
   <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :従業員数 %>
    </div>
    <div class="col-lg-4">
    <%=f.text_field :employees %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :拠点数 %>
    </div>
    <div class="col-lg-4">
    <%=f.text_field :bases %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.label :ホームページ %>
    </div>
    <div class="col-lg-4">
    <%= f.text_field :corporate_info %>
    </div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-4">
    <%= f.submit'新規登録' %>
    </div>
    <div class="col-lg-4">
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
  <% end %>