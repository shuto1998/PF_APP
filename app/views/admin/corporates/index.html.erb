<h4>企業一覧</h4>
<div class="container">
  <%= form_with url: search_corporates_path, method: :get, local: true do |f| %>
  <%= f.text_field :name,:placeholder => "企業名・電話番号で検索" %>
  <%= f.submit :企業検索 %>
  <% end %>
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
      <%= link_to new_admin_corporate_path ,class: 'btn btn-primary' ,method: :get do %>
      <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </div>
  <table class="table table-striped table-bordered">
    <tr>
      <th>企業名</th>
      <th>住所</th>
      <th>電話番号</th>
    </tr>
  <% @corporates.each do |corporate| %>
    <tr>
      <td><%= link_to corporate.name, admin_corporate_path(corporate.id) %></td>
      <td><%= corporate.address %></td>
      <td><%= corporate.phone_number %></td>
    </tr>
     <% end %>

  </table>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4"><%= paginate(@corporates) %></div>
    <div class="col-lg-4"></div>
  </div>
</div>
