<h5>日報作成</h5>

<%= form_with model: @report, local: true do |f| %>
<div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-4"><%= f.label:企業名 %></div>
      <div class="col-lg-4"><%= @corporate.name %></div>
      <%= f.hidden_field :corporate_id %>
      <div class="col-lg-2"></div>
    </div>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-4"><%= f.label:内容 %></div>
      <div class="col-lg-4"><%= f.text_area :report_text %></div>
      <div class="col-lg-2"></div>
    </div>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-4"><%= f.label:結果 %></div>
      <div class="col-lg-4"><%= f.select :result, [['アポ取得',1], ['アポ未取得',2], ['日程調整中',3]] %></div>
      <div class="col-lg-2"></div>
    </div>
    <div class="row">
      <div class="col-lg-2"></div>
      <div class="col-lg-4"><%= f.label:次回予定日 %></div>
      <div class="col-lg-4"><%= f.datetime_field :next %></div>
      <div class="col-lg-2"></div>
    </div>
    <div class="row">
     <div class="col-lg-2"></div>
     <div class="col-lg-4"><%= f.submit :日報追加 %></div>
     <div class="col-lg-6"></div>
  </div>
  <% end %>
</div>
