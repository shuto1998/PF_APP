<h4>企業一覧</h4>
<div>
<%= form_tag(root_path, method: :get) do %>
<%= text_field_tag :search %>
<%= submit_tag '企業検索', name: nil %>
<% end %>
</div>

<table class="table">
  <tr>
    <th>企業名</th>
    <th>住所</th>
    <th>電話番号</th>
  </tr>
<% @corporates.each do |corporate| %>
  <tr>
    <td><%= link_to corporate.name, corporate_path(corporate.id) %></td>
    <td><%= corporate.address %></td>
    <td><%= corporate.phone_number %></td>
  </tr>
   <% end %>

</table>