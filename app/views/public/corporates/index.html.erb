<h4>企業一覧</h4>
<div class="container">
  
  <%= form_with url: search_corporates_path, method: :get, local: true do |f| %>
  <%= f.text_field :name %>
  <%= f.submit :search %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @corporates.each do |corporate| %>
      <tr>
        <td><%= link_to corporate.name, corporate_path(corporate.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

  <div>
  <%= form_tag({controller:"corporates",action:"index"}, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '企業検索' %>
  <% end %>
  </div>

  <table class="table table-striped table-bordered">
    <tr>
      <th>企業名</th>
      <th>住所</th>
      <th>電話番号</th>
    </tr>
  <% @corporates.each do |corporate| %>
    <tr>
      <td><%= link_to corporate.name, corporate_path(corporate.id) %></td>
      <td><%= corporate.address %></td>
      <td><%= corporate.phone_number %></td>
    </tr>
     <% end %>

  </table>
  <div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4"><%= paginate(@corporates) %></div>
    <div class="col-lg-4"></div>
    </div>
</div>